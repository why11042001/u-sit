<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailLoginActivity"
    android:orientation="vertical"
    android:gravity="center"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="34dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masuk Dengan Email"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/popbold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/path_415"
        android:hint=" Email"
        android:fontFamily="@font/popbold"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/hintcolor"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/path_415"
        android:hint=" Password"
        android:inputType="textPassword"
        android:fontFamily="@font/popbold"
        android:textColor="@color/black"
        android:textColorHint="@color/hintcolor"
        android:textSize="24sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:onClick="Login"
        android:labelFor="@+id/button2"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:text="Masuk"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/popre"
        android:textSize="19sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tokenusr"
        android:visibility="invisible"/>

</LinearLayout>