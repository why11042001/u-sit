<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginBottom="60dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textAlignment="center"
        android:textColor="@color/colorh1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/popbold"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Masuk Untuk Melanjutkan"
        android:fontFamily="@font/helvetica"
        android:textAlignment="center"
        android:textColor="@color/colorh1" />

    <Button
        android:id="@+id/btn_daftaremail"
        android:layout_width="274dp"
        android:layout_height="52dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/popre"
        android:textSize="14sp"
        android:backgroundTint="@null"
        android:labelFor="@+id/btn_daftaremail"
        android:text="Daftar dengan email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAtau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Atau"
        android:textColor="@color/black"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_email_log"/>

    <Button
        android:id="@+id/btn_email_log"
        android:layout_width="274dp"
        android:layout_height="52dp"
        android:labelFor="@id/btn_email_log"
        android:background="@drawable/custom_button"
        android:text="Masuk dengan email"
        android:textColor="@color/white"

        android:textAllCaps="false"
        android:backgroundTint="@null"
        android:fontFamily="@font/popre"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_google_log"
        android:layout_width="274dp"
        android:layout_height="52dp"
        android:labelFor="@+id/btn_google_log"
        android:layout_marginTop="10dp"
        android:text="Masuk dengan google"
        android:backgroundTint="@null"
        android:textAllCaps="false"
        android:background="@drawable/custom_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/popre"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

</LinearLayout>