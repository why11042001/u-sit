<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nohp_google">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollvv"
        android:padding="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="252dp"
                android:layout_height="34dp"
                android:layout_marginTop="108dp"
                android:text="Masukkan No. HP anda"
                android:textAlignment="center"
                android:textColor="@color/colorh1"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="62dp"
                android:text="Kode akan dikirim ke nomor anda"
                android:textAlignment="center"
                android:textColor="@color/colorh1"
                android:textSize="16sp" />



            <EditText
                android:id="@+id/nohp"
                android:layout_width="311dp"
                android:layout_height="61dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/path_415"
                android:hint=" No HP"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/hintcolor"
                android:textSize="24sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/refferal"
                android:layout_width="311dp"
                android:layout_height="61dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/path_415"
                android:hint=" Refferal (Optional)"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="@color/hintcolor"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/passal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Nomor handphone tidak boleh kosong!"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="335dp"
                android:layout_height="58dp"
                android:onClick="daftar"
                android:layout_marginTop="8dp"
                android:textSize="19sp"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:text="Lanjutkan"
                android:textStyle="bold"
                android:textAllCaps="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>